{
    "name": "task-html",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/react": "^14.2.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.25",
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@vitejs/plugin-react": "^4.2.1",
        "eslint": "^8.57.0",
        "eslint-config-react-app": "^7.0.1",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "pretty-quick": "^4.0.0",
        "puppeteer": "^24.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.4.2",
        "vite": "^5.1.5",
        "vite-plugin-eslint": "^1.8.1",
        "vite-tsconfig-paths": "^4.3.1"
    },
    "scripts": {
        "start": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "jest --watchAll",
        "test:build": "jest",
        "lint": "eslint ./src",
        "prepare": "husky install"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
            "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
        },
        "modulePaths": [
            "<rootDir>/src"
        ]
    }
}
